rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // App icons - public read, authenticated write
    match /app-icons/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // App screenshots - public read, authenticated write
    match /screenshots/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // General uploads - authenticated only
    match /uploads/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}
