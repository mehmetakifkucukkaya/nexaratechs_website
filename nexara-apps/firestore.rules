rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Apps collection - public read, admin write
    match /apps/{appId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Testers collection - public create, admin read
    match /testers/{testerId} {
      allow create: if true;
      allow read, update, delete: if request.auth != null;
    }
    
    // Admin collection - only authenticated
    match /admins/{adminId} {
      allow read, write: if request.auth != null;
    }

    // Counters - Public read/write (for generating IDs)
    match /counters/{counterId} {
      allow read, create, update: if true;
    }

    // Beta Emails - Public read/create (for uniqueness check)
    match /betaEmails/{email} {
      allow read, create: if true;
    }

    // Beta Users - Public create (using sequential ID), admin read
    match /betaUsers/{userId} {
      allow create: if true;
      allow read, update, delete: if request.auth != null;
    }
  }
}
